[Argument]
arg1 = switch,true,tag=隐私相册
arg2 = switch,false,tag=Blued定位
arg3 = switch,true,tag=闪照捕获
 
customLongitude = input,"",tag=经度,desc=请输入要替换的经度
customLatitude = input,"",tag=纬度,desc=请输入要替换的纬度
 
[Rule]
# 广告拦截规则
#URL-REGEX,https://argo.blued.cn/blued/promote.*,REJECT
#URL-REGEX,https://argo.blued.cn/blued/adms/.*,REJECT
URL-REGEX,https://argo.blued.cn/blued/splash.*,REJECT
URL-REGEX,https://argo.blued.cn/blued/launch/adms,REJECT
URL-REGEX,https://social.blued.cn/users/.*/joy,REJECT
#URL-REGEX,^https:\/\/social\.blued\.cn\/users\/recommend$,REJECT
URL-REGEX,https://.*/users/chatroom/nearby/,REJECT
URL-REGEX,https://.*/users/recommend,REJECT
#URL-REGEX,https://.*/users/call,REJECT
#URL-REGEX,https://.*/users/chatroom/im/recommend,REJECT
URL-REGEX,https://voice.irisgw.cn/users/chatroom/im/recommend,REJECT
URL-REGEX,https://voice.blued.cn/users/chatroom/im/recommend,REJECT
 
[Script]
# VIP功能
http-response ^https:\/\/(social|argo)\.blued\.cn\/users(?:\/\d+\?.*is_living=false|\?(aaid|column)=) script-path=https://raw.githubusercontent.com/sunshine970918/RemoveAds/refs/heads/main/Loon/JS/bld_vip.js, requires-body=true, enable = {arg1}, tag=隐私相册
 
# 定位功能
http-request ^https:\/\/((social|argo)\.(blued|irisgw)\.cn)\/(users/(nearby/new_face|selection|guess-like/push|[^/]+/joy)|ticktocks/[^?]*\?.*(?:lat|lng|latitude|longitude)=|blued/(?!adms/)[^?]*\?.*(?:lat|lng|latitude|longitude)=|users\?.*(?:lat|lng|latitude|longitude)=) script-path=https://raw.githubusercontent.com/sunshine970918/RemoveAds/refs/heads/main/Loon/JS/bld_location.js, requires-body=true, enable = {arg2}, tag=Blued定位修改器, argument=[{customLatitude},{customLongitude}]

#闪照
http-request ^https?:\/\/[^\/]*burn-?chatfiles[^\/]*\.bldimg\.(?:com|cn)\/.*\.(?:jpg|png|mp4)(?:\?.*)?$ script-path=https://gist.githubusercontent.com/Alex0510/425ac5e1523ceab4756387c719430e42/raw/cb59df53dcc45101c521f07d1746e8ee08fb65ce/Blued_pic.js, enable = {arg3}, tag=闪照
 
[MITM]
hostname = voice.blued.cn, voice.irisgw.cn, gethornet.com, api.theorangemeetingplace.com, api.sqaces.com, social.blued.cn, argo.blued.cn, ulogs.umengcloud.com, *.bldimg.cn, burn-chatfiles.bldimg.cn, 220.249.135.81, 118.212.146.254
